<!-- Start Form Data -->

<div class="row">
  <div class="col-12 grid-margin stretch-card">
    <form autocomplete="off" id="formParent" class="" data-fv-framework="bootstrap4"
      data-fv-message="<%= __('Invalidate') %>" data-fv-icon-valid="glyphicon glyphicon-ok"
      data-fv-icon-invalid="glyphicon glyphicon-remove" data-fv-icon-validating="glyphicon glyphicon-refresh"
      data-fv-live="enabled" data-manner="edit">
      <input type='hidden' name='_csrf' value='<%= _csrf %>'> 
      <input class="parentId" value="<%=parentObj.id%>" name="id" hidden />
      <div class="row">
          <div class="col-lg-4 col-xlg-3 col-md-5">
            <div class="card">
              <div class="card-body">
                <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                    <input type="file" data-default-file="<%= parentObj.avatar? parentObj.avatar : '/images/avatar2.png' %>" class="dropify" name="thumbnail" data-field="thumbnail" data-max-file-size="10M" />
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-8 col-xlg-9 col-md-7">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="firstName">Tên</label>
                      <input type="text" class="form-control" id="firstName" name="firstName" value="<%=parentObj.firstName%>"
                        placeholder="Tên" data-fv-notempty="true"
                        data-fv-notempty-message="<%= __('Vui lòng không để trống !') %>" data-fv-stringlength="true"
                        data-fv-stringlength-min="2" data-fv-stringlength-max="20"
                        data-fv-stringlength-message="<%= __('Tên tối thiểu 2 ký tự và tối đa 20 ký tự.') %>">
                    </div>
                    <div class="form-group">
                      <label for="lastName">Họ & tên lót</label>
                      <input type="text" class="form-control" id="lastName" name="lastName" value="<%=parentObj.lastName%>"
                        placeholder="Họ và tên lót" data-fv-notempty="true"
                        data-fv-notempty-message="<%= __('Vui lòng không để trống !') %>" data-fv-stringlength="true"
                        data-fv-stringlength-min="2" data-fv-stringlength-max="20"
                        data-fv-stringlength-message="<%= __('Họ và tên lót tối thiểu 2 ký tự và tối đa 20 ký tự.') %>">
                    </div>
                    <div class="form-group">
                      <label for="phone">Điện thoại</label>
                      <input type="tel" class="form-control" id="phone" name="phone" value="<%= parentObj.phone %>"
                        pattern="[0-9]{9,12}$" placeholder="Số điện thoại" data-fv-notempty="true"
                        data-fv-notempty-message="<%= __('Vui lòng không để trống !') %>"
                        data-fv-stringlength-message="<%= __('Số điện thoại phải gồm 10 hoặc 11 chữ số') %>"
                        data-fv-stringlength="true" data-fv-stringlength-min="10" data-fv-stringlength-max="11">
                    </div>
                    <div class="form-group">
                      <label for="birthday">DOB</label>
                      <input type="date" value="<%=birthday%>" id="birthDate" class="form-control" name="birthday"
                        class="form-control" id="dateOfBirth" data-fv-notempty="true"
                        data-fv-notempty-message="<%= __('Vui lòng không để trống !') %>"
                        data-fv-date___format="<%= __('MM/DD/YYYY') %>"
                        data-fv-date___message="<%= __('Ngày tháng không hợp lệ') %>">
                    </div>
                    <div class="form-group">
                      <label class="form-control-label">
                        <%= __('Giới tính') %>
                      </label>
                      <ul class="list-unstyled list-inline">
                        <li class="list-inline-item">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input id="statusActive" type="radio" class="form-check-input" name="type" value='0' checked
                                <%=(parentObj.type == 0 )? 'checked':''%> />
                              <i class="input-helper"></i>
                              <%= __('Nữ') %>
                            </label>
                          </div>
                        </li>
                        <li class="list-inline-item">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input id="statusActive" type="radio" class="form-check-input" name="type" value='1'
                                <%=(parentObj.type == 1)? 'checked':''%> />
                              <i class="input-helper"></i>
                              <%= __('Nam') %>
                            </label>
                          </div>
                        </li>
                        <!-- <li class="list-inline-item">
                            <div class="form-check">
                              <label class="form-check-label">
                                <input id="statusActive" type="radio" class="form-check-input" name="type" value='2'
                                  <%=(parentObj.type == 2)? 'checked':''%> />
                                <i class="input-helper"></i>
                                <%= __('Giám hộ') %>
                              </label>
                            </div>
                          </li> -->
                      </ul>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="emailAddress">E-mail</label>
                      <input type="text" class="form-control" id="emailAddress" name="emailAddress"
                        value="<%= parentObj.emailAddress %>" placeholder="Email" readonly>
                    </div>
                    <!-- <div class="form-group">
                      <label for="currentAddress">Địa chỉ</label>
                      <input type="text" class="form-control" id="currentAddress" name="currentAddress" value="<%= parentObj.currentAddress %>"
                        pattern="[0-9]{9,12}$" placeholder="Số điện thoại" data-fv-notempty="true"
                        data-fv-notempty-message="<%= __('Vui lòng không để trống !') %>"
                        data-fv-stringlength-message="<%= __('Số điện thoại phải gồm 10 hoặc 11 chữ số') %>"
                        data-fv-stringlength="true" data-fv-stringlength-min="10" data-fv-stringlength-max="11">
                    </div> -->
                    <!-- address -->
                    <div class="form-group">
                      <label for="currentAddress"><%= __('Address') %></label>
                      <input type="text" class="form-control" id="currentAddress" name="currentAddress" placeholder=""
                      value="<%= parentObj.currentAddress %>" data-fv-notempty="true"
                        data-fv-notempty-message="<%= __('Required field') %>" data-fv-stringlength="true"
                        data-fv-stringlength-min="2" data-fv-stringlength-max="120"
                        data-fv-stringlength-message="<%= __('Address must be at least 2 characters') %>">
                    </div>
                    <div class="form-group">
                      <label class="form-control-label">
                          <%= __('Student') %>
                      </label>
                      <select id="students" name="students" class="form-control js-process-basic-multiple  select2-multiple"
                        data-placeholder="<%= __('Choose') %>" multiple="multiple">
                        <%  
                            var studentID = []; 
                            if(parentObj.students){
                              _.each(parentObj.students, function (std, ind) {
                                studentID.push(std.id);
                              });
                            }%>
                        <% _.each(listStudent, function (std2, index) { %>
                          <option value="<%= std2.id %>" <%= studentID.indexOf(std2.id) != -1 ? 'selected' : ''%>>
                            <%= std2.firstName + ' ' + std2.lastName %>
                          </option>
                          <% }) %> 
                      </select>
                    </div>
                    <div class="form-group">
                      <label class="form-control-label">
                        <%= __('Status') %>
                      </label>
                      <ul class="list-unstyled list-inline">
                        <li class="list-inline-item">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input id="statusPublish" type="radio" class="form-check-input" name="status" value="1" checked
                                <%=(parentObj.status == 1)? 'checked':''%> />
                              <i class="input-helper"></i>
                              <%= __('Active') %>
                            </label>
                          </div>
                        </li>
                        <li class="list-inline-item">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input id="statusActive" type="radio" class="form-check-input" name="status" value="0"
                                <%=(parentObj.status == 0)? 'checked':''%> />
                              <i class="input-helper"></i>
                              <%= __('Draft') %>
                            </label>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="row">
                    <div class="col-12">
                      <div class="alert alert-dismissible hidden" role="alert" data-alert-update="<%= __('Update successfully') %>">
                        <%= __('Update successfully') %>
                      </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <div class="form-group form-material">
                      <button id="btnFormParent" type="submit" class="btn btn-primary"><%= __('Update') %></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
     
      
      
      
      
      
 
    </form>
  </div>
</div>