<!-- Page -->
<% let BACKEND = sails.config.custom.BACKEND %> 
<div class="card">
    <div class="card-body">
      <%- partial('../../partials/filter.ejs') %>
      <div class="table-responsive"><%- partial('./_list.ejs') %></div>
    </div>
  </div>
  <div class="modal fade modal-custom" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="modal-edit" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title"><%= __('Add new') %></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true"><i class="mdi mdi-close-circle-outline"></i></span>
                  </button>
              </div>
              <div class="modal-body">
                  <form autocomplete="off" id="formFood" class="" data-fv-framework="bootstrap4"
                  data-fv-icon-valid="glyphicon glyphicon-ok" data-fv-icon-invalid="glyphicon glyphicon-remove"
                  data-fv-icon-validating="glyphicon glyphicon-refresh" data-fv-live="enabled" data-manner="add">
                  <div class="form-group row align-items-md-center">
                    <input type='hidden' name='_csrf' value='<%= _csrf %>'> 
                    <label class="col-md-3"><%= __('Code') %></label>
                    <div class="col-md-9">
                      <input type="text" class="form-control" name="code" data-fv-notempty="true" id="code"
                      data-fv-notempty-message="<%= __('Required field') %>" data-fv-stringlength="true"
                      data-fv-stringlength-min="2" data-fv-stringlength-max="30"
                      data-fv-stringlength-message="<%= __('Code must be at least 2 characters and max 30 characters') %>" />
                    </div>
                  </div>

                  <div class="form-group row align-items-md-center">
                    <label class="col-md-3"><%= __('Title') %></label>
                    <div class="col-md-9">
                      <input type="text" class="form-control" name="title" data-fv-notempty="true" id="title"
                      data-fv-notempty-message="<%= __('Required field') %>" data-fv-stringlength="true"
                      data-fv-stringlength-min="3" data-fv-stringlength-max="140"
                      data-fv-stringlength-message="<%= __('Title must be at least 3 characters and max 140 characters') %>" />
                    </div>    
                  </div>

                  <div class="form-group row align-items-md-center">
                    <label class="col-md-3"><%= __('Description') %></label>
                    <div class="col-md-9">
                        <textarea class="form-control" rows="2" id="description" name="description"></textarea>
                    </div>
                  </div>
                  
                  <div class="form-group row align-items-md-center">
                    <label class="col-md-3"><%= __('Group') %></label>
                    <div class="col-md-9">
                      <select id="thumbnail" name="thumbnail" class="form-control">
                        <option value="1" data-imagesrc="/images/appetizer.png"><%= __('Appetizer') %></option>
                        <option value="2" data-imagesrc="/images/maincourse.png"><%= __('Main Course') %></option>
                        <option value="3" data-imagesrc="/images/fish.png"><%= __('Fish') %></option>
                        <option value="4" data-imagesrc="/images/meat.png"><%= __('Meat') %></option>
                        <option value="5" data-imagesrc="/images/egg.png"><%= __('Egg') %></option>
                        <option value="6" data-imagesrc="/images/soup.png"><%= __('Soup') %></option>
                        <option value="7" data-imagesrc="/images/vegetable.png"><%= __('Vegetable') %></option>
                        <option value="8" data-imagesrc="/images/milk.png"><%= __('Milk') %></option>
                        <option value="9" data-imagesrc="/images/drink.png"><%= __('Drink') %></option>
                        <option value="10" data-imagesrc="/images/fruit.png"><%= __('Fruit') %></option>
                        <option value="11" data-imagesrc="/images/cake.png"><%= __('Cake') %></option>
                        <option value="12" data-imagesrc="/images/dessert.png"><%= __('Dessert') %></option>
                      </select>
                    </div>
                  </div>
                    
                  <div class="form-group row align-items-md-center">
                    <label class="col-md-3"><%= __('Status') %></label>
                    <div class="col-md-9">
                      <ul class="list-unstyled list-inline">
                        <li class="list-inline-item">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input id="statusActive" type="radio" class="form-check-input" name="status" checked value="<%= STATUS.ACTIVE %>">
                              <i class="input-helper"></i>
                              <%= __('Active') %>
                            </label>
                          </div>
                        </li>
                        <li class="list-inline-item">
                          <div class="form-check">
                            <label class="form-check-label">
                              <input id="statusDraft" type="radio" class="form-check-input" name="status" value="<%= STATUS.DRAFT %>">
                              <i class="input-helper"></i>
                              <%= __('Draft') %>
                            </label>
                          </div>
                        </li>
                      </ul>
                    </div>
                    
                  </div>
                  <div class="alert d-none" role="alert">
                    <i class="mdi mdi-alert-circle"></i>
                  </div>
                  <div class="modal-footer row-button-fluid">
                    <button type="reset" class="btn btn-light" data-dismiss="modal"><%= __('Cancel') %></button>
                    <button id="btnFormFood" type="submit" class="btn btn-primary waves-effect waves-classic">
                      <%= __('Add New') %>
                      <div hidden>
                        <%= __('Update')%>
                      </div>
                    </button>
                  </div>
                </form>
              </div>
          </div>
      </div>
  </div> 
<% block('localScripts', '<script src="/js/jquery.ddslick.min.js"></script>') %>
<% block('localScripts', '<script src="/js/backend/food/index.js"></script>') %> 
                            