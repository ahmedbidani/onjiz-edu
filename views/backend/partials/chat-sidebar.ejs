<div id="right-sidebar" data-userActiveId="<%=userActive.id%>" class="settings-panel">
    <i class="settings-close mdi mdi-close"></i>
    <ul class="nav nav-tabs" id="setting-panel" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="chats-tab" data-toggle="tab" href="#chats-section" role="tab" aria-controls="chats-section" aria-selected="true" aria-selected="true">TRÒ CHUYỆN</a>
      </li>
    </ul>
    <div class="tab-content p-0" id="setting-content">
      <div class="tab-pane fade scroll-wrapper ps active show" id="chats-section" role="tabpanel" aria-labelledby="chats-section">
        <ul class="chat-list">
          <% for (let i = 0; i < listClasses.length; i++) { %>
          <li class="list" data-classId="<%= listClasses[i].id %>" >
              <!-- <div class="profile"><img src="" alt="image"><span class="offline"></span></div> -->
            <div class="info">
              <div class="row ml-2">
                <a class='col-8' href="/backend/message/class-<%= listClasses[i].id %>">Lớp <%= listClasses[i].title %></a>
                <div class='col-4' id="timeLastTxtMsg-<%= listClasses[i].id %>"></div>
              </div>
              <div class="row ml-2">
                  <p class="col-10" id="lastTxtMessage-<%= listClasses[i].id %>"></p>
                  <div class="col-2">
                    <div id="numberOfUnreadMessage-<%= listClasses[i].id %>"></div>
                  </div>
                </div>
            </div>
            <!-- <small class="text-muted my-auto">19 min</small> -->
          </li>
          <% } %>
        </ul>
      </div>
      <!-- chat tab ends -->
    </div>
  </div>