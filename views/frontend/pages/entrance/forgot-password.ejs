<div class="wrapper pt-135">
  <div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto auth">
      <div class="auth-form-light text-left py-5 px-4 px-sm-5">
        <h4><%= __('Forgot password?')%></h4>
        <h6 class="font-weight-light"><%= __('Please enter your e-mail to reset the password')%></h6>
        <form id="frmForgotPassword" data-toggle="validator" role="form" class="pt-3">
          <input type='hidden' name='_csrf' value='<%= _csrf %>'>
          <div class="form-group form-material floating">
            <input type="email" name="emailAddress" class="form-control empty" data-plugin="formMaterial"
              data-fv-notempty="true" data-fv-notempty-message="<%= __('Required field') %>"
              data-fv-message="<%= __('E-mail is invalid') %>"
              pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" autofocus required> 
            <div class="invalid-feedback"><%= __('Forgot password?')%></div>
          </div>
          <div id="resetPasswordFail" class="alert hidden" role="alert">
            <%= __('Email is not exist.')%>
          </div>
          <div id="requiredFeild" class="alert hidden" role="alert">
            <%= __('Email is required!')%>
          </div>
          <div id="resetPasswordSuccessfully" class="alert hidden">
            <%= __('The new password has been sent to your email. Please check your mail inbox.') %>
          </div>
          <div class="form-group">
            <button type="submit" :syncing="syncing" class="btn btn-block main-btn mt-40"><%= __('Reset password')%></button>
          </div>
        </form>
        <p class="text-center"><a href="/login"><%= __('Go back')%></a></p>
      </div>
    </div>
  </div> 
</div>