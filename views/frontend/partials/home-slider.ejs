<!-- START REVOLUTION SLIDER -->
<section class="slider_area slider-active">
  <%if(webSettings && webSettings.value && webSettings.value.homeSettings && webSettings.value.homeSettings.sliders && webSettings.value.homeSettings.sliders.length) {%>
    <%for(let i = 0; i < webSettings.value.homeSettings.sliders.length; i++){%>
      <div class="single_slider bg_cover d-flex align-items-center" style="background-image: url(<%=webSettings.value.homeSettings.sliders[i].background ? webSettings.value.homeSettings.sliders[i].background : '/frontend/images/banner-home.png' %>)">
          <div class="container">
              <div class="row">
                  <div class="col-lg-12">
                      <div class="slider_content">
                          <h4 class="sub_title" data-animation="fadeInUp" data-delay="0.2s"><%-webSettings.value.homeSettings.sliders[i].headline ? webSettings.value.homeSettings.sliders[i].headline : 'Kindie' %></h4>
                          <h2 class="main_title" data-animation="fadeInUp" data-delay="0.5s"><%-webSettings.value.homeSettings.sliders[i].title ? webSettings.value.homeSettings.sliders[i].title : 'Kindie' %></h2>
                          <p data-animation="fadeInUp" data-delay="0.8s"><%-webSettings.value.homeSettings.sliders[i].description ? webSettings.value.homeSettings.sliders[i].description : '[WELCOME_DESCRIPTION]' %></p>
                          <a class="main-btn" href="<%=webSettings.value.homeSettings.sliders[i].link%>" data-animation="fadeInUp" data-delay="1.1s"><%= __('Learn More')%></a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <%}%>
    <%} else {%>
      No banner
    <%}%>
</section>
<!-- END OF SLIDER WRAPPER -->